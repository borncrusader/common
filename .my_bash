sanitize()
{
  if [ ! -z "$1" ];
  then
    if [ "$1" == "-v" ];
    then
      rm ~/.vimperator/info/default/history-command
      rm ~/.vimperator/info/default/history-search
      return
    elif [ "$1" == "-b" ];
    then
      rm ~/.bash_history
      return
    fi
  fi
  echo "usage : sanitize [options]"
  echo " -v - vimperator history"
  echo " -b - bash history"
}

